<%- include('inc/head', data) %>
	<body class="bg-light">
		<div class="container">
			<div class="row mt-5">
				<div class="col-sm-2">&nbsp;</div>
				<div class="col-sm-8 p-5 border border-secondary rounded bg-white">
					<h1><%= data.pageHeader ? data.pageHeader : 'Larv IT Admin GUI - Login' %></h1>
					<div class="row">
						<div class="col-sm-8 pt-5">
							<form id="login_form" method="post">
								<div class="form-group">
									<input type="text" class="form-control" id="login_username" name="username" placeholder="Username" <% if (obj.formFields !== undefined) { print('value="' + obj.formFields.username + '"'); } %>/>
								</div>
								<div class="form-group">
									<input type="password" class="form-control" id="login_password" name="password" placeholder="Password" />
								</div>
								<div class="form-group">
									<button type="submit" class="btn btn-primary">Log in</button>
								</div>
							
								<% if (obj.formErrors instanceof Array) { %>
									<div>
										<% _.forEach(formErrors, function(errStr) { %>
											<span class="alert alert-danger"><%= errStr %></span>
										<% }); %>
									</div>
								<% } %>
								
							</form>
						</div>
						<div class="col-sm-4">
							<img class="pull-right" src="images/larvit.svg">
						</div>
					</div>
				</div>
				<div class="col-sm-2">&nbsp;</div>
			</div>
		</div>
	</body>
</html>